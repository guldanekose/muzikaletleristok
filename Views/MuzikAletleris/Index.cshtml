@model IEnumerable<muzikaletleristok.Models.MuzikAletleri>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        
        <tr>
            <th>
                Müzik Aleti Adı
            </th>
            <th>
               Markası
            </th>
            <th>
                Modeli
            </th>
            <th>
               Fiyatı
            </th>
            <th>
                Stok Miktarı
            </th>
            <th>
                Fotoğrafı
            </th>
            <th>
               Kategorisi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MuzikAletiAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StokMiktari)
            </td>
            <td>
                    <img src="@Url.Content(@item.MuzikAletiPhoto)" alt="Ürün görseli" height="100" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MuzikAletiId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.MuzikAletiId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MuzikAletiId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet"
      href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
